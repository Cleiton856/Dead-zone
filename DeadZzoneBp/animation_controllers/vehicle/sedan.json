{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.sedan": {
      "states": {
        "default": {
          "transitions": [
            {
              "sedan.start": "query.has_rider"
            }
          ]
        },
        "sedan.start": {
          "transitions": [
            {
              "default": "!query.has_rider"
            },
            {
              "sedan.idle1": "query.has_rider"
            }
          ],
          "on_entry": [
            "/playsound mob.sedan.start @a[r=20]"
          ]
        },
        "sedan.idle1": {
          "transitions": [
            {
              "default": "!query.has_rider"
            },
            {
              "sedan.idle2": "query.has_rider"
            }
          ],
          "on_entry": [
            "/playsound mob.sedan.idle @e[r=10] ~ ~ ~ 0.5",
            "/function light"
          ]
        },
        "sedan.idle2": {
          "transitions": [
            {
              "default": "!query.has_rider"
            },
            {
              "sedan.idle1": "query.has_rider"
            }
          ],
          "on_entry": [
            "/playsound mob.sedan.idle @a[r=10] ~ ~ ~ 0.5",
            "/function light"
          ]
        }
      }
    }
  }
}
