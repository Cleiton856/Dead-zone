{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.zaza_plushie": {
      "initial_state": "setup",
      "states": {
        "setup": {
          "transitions": [
            {
              "zaza_plushie": "q.get_equipped_item_name('main_hand') == 'zaza_plushie_grenade' && q.is_using_item"
            }
          ]
        },
        "zaza_plushie": {
          "on_entry": [
            "@s zaza_plushie"
          ],
          "transitions": [
            {
              "setup": "query.all_animations_finished"
            }
          ]
        }
      }
    }
  }
}
